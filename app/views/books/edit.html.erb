
<% if flash[:error].present? %>
  <div class="error">
    <%= flash[:error] %>
  </div>
<% end %>

<% if @book.errors.any? %>
  <div class="error-messages">
    <h3><%= pluralize(@book.errors.count, "error") %> prohibited this book from being updated:</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<h1>Editing Book</h1>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

<h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Update Book' %>

<% end %>

<span>
  <%= link_to "Show", book_path(@book) %>
</span>

<span>
  <%= link_to "Back", "/books" %>
</span>
