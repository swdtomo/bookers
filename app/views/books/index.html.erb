<h2>New book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <h3>Title</h3>
 <%= f.text_field :title %>

 <h3>Body</h3>
 <%= f.text_area :body %>

 <%= f.submit 'Create Book' %>
<% end %>
